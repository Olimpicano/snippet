//- Все примеси в этом файле должны начинаться c имени блока (switch-pic)

mixin switch-pic(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +switch-pic('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' switch-pic--' + modsList[i].trim();
      }
    }

  .switch-pic(class=allMods)&attributes(attributes)
    block
    

mixin switch-pic-range()
  .switch__range-block
    input(type='range').switch__range